{
  "name": "template-nodejs-api",
  "version": "1.0.0",
  "description": "Node.js Template for typesafe RESTFUL APIs Development!",
  "main": "build/server.js",
  "engines": {
    "node": ">=18 <19"
  },
  "scripts": {
    "build": "tsup src --out-dir build",
    "start:dev": "tsx watch src/server.ts",
    "start:prod": "node build/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir path/to/your/e2e/tests",
    "test:e2e:watch": "vitest watch --dir path/to/your/e2e/tests"
  },
  "keywords": [],
  "author": {
    "name": "Pietro Piva Vieira",
    "email": "pietro.developer@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "8.3.0",
    "@fastify/cors": "8.3.0",
    "@fastify/helmet": "10.1.1",
    "@fastify/jwt": "7.0.0",
    "@fastify/swagger": "8.5.1",
    "@prisma/client": "4.15.0",
    "bcryptjs": "2.4.3",
    "dotenv": "16.0.3",
    "fastify": "4.18.0",
    "reflect-metadata": "0.1.13",
    "typedi": "0.10.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@swc/core": "1.3.65",
    "@types/bcryptjs": "2.4.2",
    "@types/node": "20.3.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.60.0",
    "@typescript-eslint/parser": "5.59.11",
    "@vitest/coverage-c8": "0.29.8",
    "@vitest/ui": "0.30.1",
    "eslint": "8.42.0",
    "npm-run-all": "4.1.5",
    "prisma": "4.15.0",
    "supertest": "6.3.3",
    "tsup": "7.0.0",
    "tsx": "3.12.7",
    "typescript": "5.1.3",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.29.2"
  }
}
